# NexuFile Environment Configuration
# Copy this file to .env and update the values as needed

# Backend Environment Variables
FLASK_ENV=development
SECRET_KEY=nexufile-secret-key-2024-secure-sphere
JWT_SECRET_KEY=nexufile-jwt-secret-key-2024-secure

# Database Configuration
DATABASE_URL=sqlite:///app.db

# Google Cloud Platform Configuration
GOOGLE_CLOUD_PROJECT=nexufile
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
GCS_BUCKET_NAME=nexufile-storage
GCS_BUCKET_REGION=us-central1

# Firebase Configuration
FIREBASE_PROJECT_ID=nexufile
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Vertex AI Configuration
VERTEX_AI_PROJECT=nexufile
VERTEX_AI_LOCATION=us-central1
AI_MODEL_ENDPOINT=your-model-endpoint

# Security Configuration
ENCRYPTION_KEY=nexufile-encryption-key-32-chars-long
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif,mp4,avi,mov,mp3,wav

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.8
SENSITIVE_DATA_THRESHOLD=0.7

# Rate Limiting
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

